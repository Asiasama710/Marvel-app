<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.marvelapp.ui.characterDetails.DetailsCharacterViewModel" />
    </data>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_color">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="300dp"
                android:background="@drawable/details_page_background"
                android:elevation="@dimen/elevation_4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <TextView
                    android:id="@+id/label_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/Space6x"
                    android:layout_marginTop="@dimen/Space2x"
                    android:text="@string/description"
                    android:textColor="@color/white"
                    android:textSize="@dimen/more_large_text_size"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/label_series_availibl" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/Space6x"
                    android:layout_marginTop="@dimen/Space2x"
                    android:text="@{viewModel.characterInfo.description}"
                    android:textColor="@color/white"
                    android:textSize="@dimen/medum_text_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/label_description"
                    tools:text="long descriotion about character " />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/comics"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_margin="@dimen/dim8"
                    android:layout_marginStart="@dimen/Space2x"
                    android:layout_marginEnd="@dimen/Space5x"
                    android:background="@drawable/button_background"
                    android:onClick="@{()-> viewModel.onClickComics(viewModel.characterInfo)}"
                    android:text="@string/comics"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/large_text_size"
                    app:layout_constraintBottom_toBottomOf="@+id/series"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/series"
                    app:layout_constraintTop_toTopOf="@+id/series" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/series"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_margin="@dimen/dim8"
                    android:layout_marginStart="@dimen/Space5x"
                    android:layout_marginBottom="@dimen/Space7x"
                    android:background="@drawable/button_background"
                    android:onClick="@{()-> viewModel.onClickSeries(viewModel.characterInfo)}"
                    android:text="@string/series"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/large_text_size"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/comics"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/character_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/Space6x"
                    android:layout_marginTop="@dimen/Space5x"
                    android:shadowColor="@color/black"
                    android:shadowDx="10"
                    android:shadowDy="10"
                    android:text="@{viewModel.characterInfo.name}"
                    android:textColor="@color/white"
                    android:textSize="@dimen/xmore_large_text_size"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="@string/name_character" />

                <TextView
                    android:id="@+id/label_series_availibl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/Space6x"
                    android:layout_marginTop="@dimen/Space5x"
                    android:text="@string/series_"
                    android:textColor="@color/white"
                    android:textSize="@dimen/medum_text_size"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/character_name" />

                <TextView
                    android:id="@+id/label_comic_availibl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:text="@string/comics_"
                    android:textColor="@color/white"
                    android:textSize="@dimen/medum_text_size"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/comic_availibl"
                    app:layout_constraintStart_toEndOf="@+id/series_availibl"
                    app:layout_constraintTop_toTopOf="@+id/comic_availibl" />

                <TextView
                    android:id="@+id/series_availibl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.characterInfo.series.available}"
                    android:textColor="@color/white"
                    android:textSize="@dimen/medum_text_size"
                    android:paddingStart="@dimen/Space1x"
                    app:layout_constraintBottom_toBottomOf="@+id/label_series_availibl"
                    app:layout_constraintStart_toEndOf="@+id/label_series_availibl"
                    app:layout_constraintTop_toTopOf="@+id/label_series_availibl"
                    tools:text="series avilabel" />

                <TextView
                    android:id="@+id/comic_availibl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/Space5x"
                    android:text="@{viewModel.characterInfo.comics.available}"
                    android:textColor="@color/white"
                    android:textSize="@dimen/medum_text_size"
                    android:paddingStart="@dimen/Space1x"
                    app:layout_constraintStart_toEndOf="@+id/label_comic_availibl"
                    app:layout_constraintTop_toBottomOf="@+id/character_name"
                    tools:text="comics avalible" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/character_image"
                android:layout_width="415dp"
                android:layout_height="374dp"
                android:scaleType="centerCrop"
                app:imageurl="@{viewModel.characterInfo.thumbnail.path+ `.`+ viewModel.characterInfo.thumbnail.extension}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

</layout>